<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Registration"
    android:background="@drawable/bgcolor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bgcolor">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/registrationicon"
            android:layout_margin="50dp"
            />

        <TextView
            android:text="REGISTRATION FORM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:textSize="24sp"
            android:textColor="#673AB7"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/etgoodname"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="   Enter Your Goodname"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:layout_width="250dp"
            android:textColorHint="#673AB7"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/etlocation"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="   Enter Your Address"
            android:drawableLeft="@drawable/ic_add_location_black_24dp"
            android:layout_width="250dp"
            android:textColorHint="#673AB7"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etemail"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="   Enter Your Email"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_width="250dp"
            android:textColorHint="#673AB7"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etusername"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="   Enter Username"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:layout_width="250dp"
            android:textColorHint="#EE3E1A"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etpassword"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="   Enter Password"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:layout_width="250dp"
            android:textColorHint="#673AB7"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etconfirmpassword"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="   Confirm Password"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:layout_width="250dp"
            android:textColorHint="#673AB7"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <TextView

            android:id="@+id/etDOB"
            android:layout_margin="5dp"
            android:textSize="15sp"
            android:hint="   Date of Birth"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:layout_width="250dp"
            android:textColorHint="#EE3E1A"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            />
        <Button
            android:text="REGISTER"
            android:id="@+id/btnreg"
            android:layout_width="200dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="#673AB7"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/tvlogin"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Already Have an Account? Click Here"
            android:textColor="#673AB7"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>


</ScrollView>